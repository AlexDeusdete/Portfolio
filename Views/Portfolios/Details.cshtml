@model PrjPortfolio.Models.Portfolio

@{
    ViewData["Title"] = "Details";
}

<div style="background-color:@System.Drawing.ColorTranslator.ToHtml(Model.SecondColor); color:@System.Drawing.ColorTranslator.ToHtml(Model.FristColor)">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top navbar-light box-shadow" style="z-index:2">
        <a class="navbar-brand" style="color:@System.Drawing.ColorTranslator.ToHtml(Model.FristColor);" asp-area="" asp-controller="Portfolios" asp-action="Index">Seu Portfólio</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link btn-hover" role="button" style="color:@System.Drawing.ColorTranslator.ToHtml(Model.FristColor);" href="#start">Início</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn-hover" role="button" style="color:@System.Drawing.ColorTranslator.ToHtml(Model.FristColor);" href="#projects">Projetos</a>
                </li>
            </ul>
        </div>
    </nav>
    <div id="start" class="min-vh-100">
        <div id="carouselDetails" class="carousel slide" data-ride="carousel">
            <div class="carousel-caption" style="height:90%">
                <img class="rounded-circle img-fluid align-middle"
                        style="width:25%; border-style: solid; border-width:10px; border-color:@System.Drawing.ColorTranslator.ToHtml(Model.FristColor);"
                        src="~/Images/no-picture-taking.png"
                        role="img"
                        alt="Sem Foto" />
                <h1>@Html.DisplayFor(model => model.Person.CompletName)</h1>
            </div>
            <ol class="carousel-indicators">
                <li data-target="#carouselDetails" data-slide-to="0" class="active"></li>
                <li data-target="#carouselDetails" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner ">
                <div class="carousel-item active">
                    <img src="~/Images/nasa.jpg" class="d-block w-100" alt="Imagem do planeta tirada pela nasa" />
                </div>
                <div class="carousel-item">
                    <img src="~/Images/keyboard.jpg" class="d-block w-100" alt="Teclado retro iluminado" />
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselDetails" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
            </a>
            <a class="carousel-control-next" href="#carouselDetails" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Próximo</span>
            </a>
        </div>
        <div class="container mt-3">
            <h2>
                @Html.DisplayFor(model => model.Title)
            </h2>
            <h3>
                @Html.DisplayFor(model => model.Area)
            </h3>
            <h4 class="mt-4">
                @Html.DisplayFor(model => model.Description)
            </h4>
        </div>
    </div>
    <div id="projects" class="min-vh-100 container">
        <h1>Projetos</h1>
        <div class="row mb-2">
            @foreach (var item in Model.Projects)
            {
                <div class="col-md-6">
                    <div class="card flex-md-row mb-4 box-shadow h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                            <strong class="d-inline-block mb-2 text-primary">World</strong>
                            <h3 class="mb-0">
                                <a class="text-dark" href="#">Featured post</a>
                            </h3>
                            <div class="mb-1 text-muted">Nov 12</div>
                            <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                            <a href="#">Continue reading</a>
                        </div>
                        <img class="card-img-right flex-auto d-none d-md-block" data-src="holder.js/200x250?theme=thumb" alt="Thumbnail [200x250]" style="width: 200px; height: 250px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22200%22%20height%3D%22250%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20200%20250%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_1717e043556%20text%20%7B%20fill%3A%23eceeef%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A13pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_1717e043556%22%3E%3Crect%20width%3D%22200%22%20height%3D%22250%22%20fill%3D%22%2355595c%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2256.20000076293945%22%20y%3D%22131%22%3EThumbnail%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
                    </div>
                </div>
            }
        </div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>