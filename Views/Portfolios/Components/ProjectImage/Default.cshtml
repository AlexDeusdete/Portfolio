@model IEnumerable<PrjPortfolio.Models.Portfolio_Projects_Images>

<div class="row">
    <div class="col-9">
        <span class="shadow btn btn-outline-success btn-file mt-3" role="button">
            Selecionar Foto<input type="file" name="Img" id="imgProject">
        </span>
    </div>
    <div class="col-3">
        <button onclick="SaveImgProject()" id="AddImgCapa" type="button" class="shadow btn btn-outline-success btn-file mt-3">
            Add
        </button>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img id="imgFoto" class="shadow img-fluid mx-auto d-block"
                         src="@item.PhotoUrl"
                         style="width:90%;" />
                </td>
                <td>
                    <button id="@item.ID" type="button" onclick="DelimgProject(@item.ID)" class="btn btn-outline-danger m-2">
                        <i class="fas fa-minus-circle"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>